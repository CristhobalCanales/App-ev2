<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.main.DenunciarFragment"
    android:background="#343B45">


    <LinearLayout
        android:id="@+id/nuevo_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="130dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="60dp" >

        <EditText
            android:id="@+id/nuevo_titulo"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo"
            android:textColor="#8A9398"
            android:background="#3E4750"
            android:textColorHint="#8A9398"
            android:padding="50px"
            />

        <EditText
            android:id="@+id/nuevo_direccion"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Direccion"
            android:textColor="#8A9398"
            android:background="#3E4750"
            android:textColorHint="#8A9398"
            android:padding="25dp"
            />

        <Button
            android:id="@+id/nuevo_bt_crearDenuncia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FFB842"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="Denunciar"
            android:textColor="#FFF"
            android:textSize="25dp"
            />


    </LinearLayout>


</RelativeLayout>